<p id="notice"><%= notice %></p>

<h1>Todos eventos</h1>

<table>
  <% @events.each do |event| %>
    <tr>
      <td><%= event.date %></td>
      <td><%= event.title %></td>
      <td><%= link_to 'Ver', event_path(event) %></td>
      <td><%= link_to 'Editar', edit_event_path(event) %></td>
      <td><%= link_to 'Borrar', event, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
    </tr>
  <% end %>
</table>

<br>

<%= link_to 'Nuevo evento', new_event_path %>
