%p#notice= notice

%p
  %b
    = t('activerecord.attributes.event.title')
  = @event.title
%p
  %b
    = t('activerecord.attributes.event.date')
  = l(@event.date)
- if @event.flyer_image.attached?
  %p
    = image_tag(@event.flyer_image.variant(resize: '400x400'))
%p
  %b
    = t('activerecord.attributes.event.description')
  = @event.description

= link_to t(:edit), edit_event_path(@event)
\|
= link_to t(:back), events_path
\|
= link_to t(:calendar), root_path
