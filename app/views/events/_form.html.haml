= form_for @event do |f|
  - if @event.errors.any?
    #error_explanation
      %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
      %ul
        - @event.errors.full_messages.each do |message|
          %li= message

  .group
    = f.label :title
    = f.text_field :title
  .group
    = f.label :date
    = f.date_select :date
  .group
    = f.label :flyer_image, t('flyer')
    = f.file_field :flyer_image
  .group
    = f.label :description
    = f.text_area :description, rows: 8
  .actions
    = f.submit t(:save)
